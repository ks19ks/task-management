<p id="notice"><%= notice %></p>
<h1><%= t('.title') %></h1>
<div>
  <%= form_with(scope: :task, url: tasks_path, method: :get, local: true) do |f| %>
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title %>
    <%= f.label :status, 'ステータス' %>
    <%= f.select :status, Task.statuses.keys.map { |k| [k, k] }, { include_blank: '選択してください' } %>
    <%= f.submit '検索' %>
    <%= link_to 'クリア', tasks_path %>
  <% end %>
  <%= link_to '終了期限でソート', tasks_path(sort_due: 'true') %>
</div>
<table border="1">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.task.title') %></th>
      <th><%= t('activerecord.attributes.task.description') %></th>
      <th><%= t('activerecord.attributes.task.due_date') %></th>
      <th><%= t('activerecord.attributes.task.status') %></th>
      <th><%= t('attributes.created_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= l(task.due_date) if task.due_date %></td>
        <td><%= task.status %></td>
        <td><%= l(task.created_at, format: :long) %></td>
        <td><%= link_to t('.show'), task %></td>
        <td><%= link_to t('.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('.delete'), task, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to t('.add'), new_task_path %>
