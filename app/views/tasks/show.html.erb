<div class="adj-width mt-3">
  <h1><%= t('.title') %></h1>
  <table class="table">
    <tbody>
      <tr>
        <td><strong><%= t('activerecord.attributes.task.title') %>: </strong></td>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <td><strong><%= t('activerecord.attributes.task.description') %>: </strong></td>
        <td><%= @task.description %></td>
      </tr>
      <tr>
        <td><strong><%= t('activerecord.attributes.task.due_date') %>: </strong></td>
        <td><%= l(@task.due_date) if @task.due_date %></td>
      </tr>
      <tr>
        <td><strong><%= t('activerecord.attributes.task.status') %>: </strong></td>
        <td><%= @task.status %></td>
      </tr>
      <tr>
        <td><strong><%= t('activerecord.attributes.task.priority') %>: </strong></td>
        <td><%= @task.priority %></td>
      </tr>
      <tr>
        <td class="align-middle">
          <strong><%= t('activerecord.attributes.label.name') %>: </strong>
        </td>
        <td>
          <% @task.labels.each do |label| %>
            <span class="btn btn-secondary btn-sm" style="pointer-events:none;">
              #<%= label.name %>
            </span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= link_to t('.edit'), edit_task_path(@task) %> |
  <%= link_to t('.back'), tasks_path %>
</div>
