<p id="notice"><%= notice %></p>
<h1>TODO一覧</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.description %></td>
        <td><%= link_to '詳細', t %></td>
        <td><%= link_to '編集', edit_task_path(t) %></td>
        <td><%= link_to '削除', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
