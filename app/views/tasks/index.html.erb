<p id="notice"><%= notice %></p>
<h1><%= t('.title') %></h1>
<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.task.title') %></th>
      <th><%= t('activerecord.attributes.task.description') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.description %></td>
        <td><%= link_to t('.show'), t %></td>
        <td><%= link_to t('.edit'), edit_task_path(t) %></td>
        <td><%= link_to t('.delete'), t, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to t('.add'), new_task_path %>
